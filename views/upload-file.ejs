<!-- views/upload.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Upload File</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
  </head>
  <body>
    <div class="d-flex vh-100" style="background-image: url('../uploads/assets/background.png')">
      <div class="d-flex flex-column position-absolute top-50 start-50 translate-middle">
        <h4 class="d-inline-flex mb-3" width="75">Unggah File</h4>
        <div class="bg-primary-subtle rounded-4 py-5" style="padding-left: 9rem; padding-right: 9rem; width: 700px">
          <div class="ps-1">
            <form action="/upload/file" method="POST" enctype="multipart/form-data">
              <div class="d-flex flex-column mb-3">
                <label class="form-label" for="name">Nama File</label>
                <input class="form-control" type="text" name="name" id="name" required placeholder="Nama File" />
              </div>
              <div class="d-flex flex-column mb-3">
                <label class="form-label" for="file">Pilih File</label>
                <input class="form-control" type="file" name="file" required />
              </div>
              <div class="d-grid gap-4 d-md-flex justify-content-md-end">
                <a href="/home" class="btn btn-light btn-outline-secondary mt-3" style="width: 100px">Batal</a>
                <button class="btn btn-primary mt-3" type="submit" style="width: 100px">Unggah</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  </body>
</html>
